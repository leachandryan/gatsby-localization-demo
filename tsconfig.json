{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["localization/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
